
{% for key, row in pager %}
<div class="product-item">
    <figure >
        <a href="{{ path('_web_show_page',{'slug':row.slug}) }}"> {{ thumbnail(row.icon,'small') }}</a>
    </figure>
    <strong class="title">
        <a href="{{ path('_web_show_page',{'slug':row.slug}) }}">{{row.title|truncate(30)}}</a>
    </strong>
    <div class="prices">                                
        <div><span>Cena:</span> {{row.price}} PLN</div>
        <div><span>Kaucja:</span> {{row.deposit}} PLN</div>
    </div>
    <div class="alignright">
        <a href="{{ path('_web_show_page',{'slug':row.slug}) }}" class="btn orange round">zam√≥w</a>
    </div>                        
</div>
{% endfor %}
