{# default Sliding pagination control implementation #}
{% if pageCount > 1 %}
<div class="pagination">
    {% if first is defined and current != first %}
        <div class="first">
            <a class="btn gray round" href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
        </div>
    {% endif %}

    {% if previous is defined %}
        <div class="previous">
            <a class="btn gray round" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
        </div>
    {% endif %}
     
    {% for page in pagesInRange %}
        {% if page != current %}
            <div class="page">
                <a class="btn gray round" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            </div>
        {% else %}
            <div class="btn gray round active">{{ page }}</div>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <div class="next">
            <a class="btn gray round" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
        </div>
    {% endif %}

    {% if last is defined and current != last %}
        <div class="last">
            <a class="btn gray round" href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
        </div>
    {% endif %}
</div>
{% endif %}
