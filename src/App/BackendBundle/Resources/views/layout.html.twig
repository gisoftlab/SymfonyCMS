            {#%}#}

            {#<script type="text/javascript"  src="{{ asset_url }}"></script>#}
        {#{% endjavascripts %}#}
{#{% endblock%}#}

{% block javascripts_main %}
    <!-- jQuery -->
    <script type="text/javascript" src="{{ asset('assets/vendors/jquery/dist/jquery.min.js') }}"></script>
    <!-- jQuery sunmit -->
    <script type="text/javascript" src="{{ asset('backend/js/jquery/jquery.form.js') }}"></script>
    <!-- Bootstrap -->
    <script type="text/javascript" src="{{ asset('assets/vendors/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <!-- FastClick -->
    <script type="text/javascript" src="{{ asset('assets/vendors/fastclick/lib/fastclick.js') }}"></script>
    <!-- NProgress -->
    <script type="text/javascript" src="{{ asset('assets/vendors/nprogress/nprogress.js') }}"></script>
    <!-- iCheck -->
    <script type="text/javascript" src="{{ asset('assets/vendors/iCheck/icheck.min.js') }}"></script>
    <!-- Select2 -->
    <script type="text/javascript" src="{{ asset('assets/vendors/select2/dist/js/select2.full.min.js') }}"></script>
    <!-- Parsley -->
    <script type="text/javascript" src="{{ asset('assets/vendors/parsleyjs/dist/parsley.min.js') }}"></script>
{% endblock %}

{% block javascripts_render %}
    {{ renderJs() }}
    {{ renderJsInline() }}
{% endblock%}


{% block javascripts_custom %}
<!-- Custom Theme Scripts -->
<script src="{{ asset('backend/js/gs/gsAjax.js') }}"></script>
<script src="{{ asset('backend/js/gs/custom_cms.js') }}"></script>
<script src="{{ asset('assets/js/custom.js') }}"></script>
{% endblock %}