{% extends 'AppBackendBundle::base.html.twig' %}

{% block title %}{{backend.metatag.title|trans({},'gsMetatag')}}{% endblock %}

{% block meta %}
    <meta name="description" content="{% block meta_description %}{{backend.metatag.description|trans({},'gsMetatag')}}{% endblock %}">
    <meta name="keywords" content="{% block meta_keywords %}{{backend.metatag.keywords|trans({},'gsMetatag')}}{% endblock %}">
    <meta name="author" content="{% block meta_author %}{{backend.metatag.author|trans({},'gsMetatag')}}{% endblock %}">
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap -->
    <link href="{{ asset('assets/vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="{{ asset('assets/vendors/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
    <!-- iCheck -->
    <link href="{{ asset('assets/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
{% endblock stylesheets %}

{% block stylesheets_render %}
    {{ renderCss() }}
{% endblock%}

{% block stylesheets_custom %}
    <!-- Custom Theme Style -->
    <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet">
{% endblock%}

{% block bodyClass %}nav-md{% endblock %}
        
{% block body %}

    <div class="container body">
        <div class="main_container">
            {% include 'AppBackendBundle::_sidebar.html.twig' %}
            {% include 'AppBackendBundle::_topnav.html.twig' %}

            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    {% block top_content_header %}
                        <div class="page-title">
                            <div class="title_left">
                                {{ render(controller('AppBackendBundle:Roadmap:prepare', { 'parentId': app.request.get("parentId"), 'id': app.request.get("id") })) }}
                                <h3>{% block page_title %}Page Title{% endblock page_title %}</h3>

                            </div>

                            <div class="title_right">
                                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                    <div class="input-group">
                                        {{ render(controller('AppPagesBundle:Searcher:seek')) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endblock top_content_header %}
                    <div class="clearfix"></div>
                    <div class="row">
                        {% include 'AppBackendBundle::_note.html.twig' %}
                    </div>
                    {% block content %}{% endblock %}
                </div>
            </div>
            <!-- /page content -->
            {% include 'AppBackendBundle::_footer.html.twig' %}
        </div>
    </div>
{% endblock %}

