    {#{% javascripts#}
            {#'backend/js/gs/gsAjax.js'#}
            {#'backend/js/gs/custom_jquery.js'#}
            {#'backend/js/jquery/jquery.form.js'#}

            {#output='public/js/compiled-footer.js'#}
