{% form_theme form with 'AppBackendBundle:Form:form_admin_fields.html.twig' %}

<div class="content-table-inner more-round">
    <form id="quickForm{{ pageId }}" class="quickForm"
          action="{{ path('_pages_translate', {'id':pageId,'culture':culture,'quick':quick}) }}" method="post">
        <fieldset>
            <div>
                {{culture}}
                {{ form_errors(form) }}
                {{ form_widget(form._token) }}
            </div>
            <div>{{ form_label(form.title, '', { 'label_attr': {'class': ''} }) }}</div>
            <div>
                {{ form_widget(form.title, { 'attr': {
                    'style': 'max-width:60%',
                    'required':'required'
                } }) }}
            </div>
            <div>{{ form_errors(form.title) }}</div>

            <div>{{ form_label(form.short) }}</div>
            <div>{{ form_widget(form.short, { 'attr': {'style': 'max-width:60%'} }) }}</div>
            <div>{{ form_errors(form.short) }}</div>

            <div>{{ form_label(form.description) }}</div>
            <div>{{ form_widget(form.description, {'id': 'quick_translation_'~pageId, 'attr': {'style': 'max-width:60%;height:150px'} }) }}</div>
            <div>{{ form_errors(form.description) }}</div>

            <div class="checkbox">
                <label>{{ form_widget(form.published, { 'attr': {
                        'class': 'flat',
                    } }) }}
                </label>
            </div>
            <a href="#" class="btnShowBlock">{{ 'Edytuj metatagi'|trans({},'gsPages') }}</a>
            <div class="showBlock">
                <div>{{ form_label(form.metaTitle) }}</div>
                <div>{{ form_widget(form.metaTitle, { 'attr': {'class': ''} }) }}</div>
                <div>{{ form_errors(form.metaTitle) }}</div>

                <div>{{ form_label(form.metaKeywords) }}</div>
                <div>{{ form_widget(form.metaKeywords, { 'attr': {'class': ''} }) }}</div>
                <div>{{ form_errors(form.metaKeywords) }}</div>

                <div>{{ form_label(form.metaDescription) }}</div>
                <div>{{ form_widget(form.metaDescription, { 'attr': {'class': ''} }) }}</div>
                <div>{{ form_errors(form.metaDescription) }}</div>
            </div>
            <div class="btn-group">
                <a class="btn btn-primary closeQuickAction" href='#load-form{{ pageId }}' ajax='{"id": "{{ pageId }}"}'>{{ 'Zamknij'|trans({},'gsPages') }}</a>

                <div class="submit">
                    <button type="submit" class="btn btn-success saveQuickAction"
                            ajax='{"target":"#load-form","data":{"id":"{{ pageId }}","feedback": "{{ feedback }}", "parentId": "{{ parentId }}" }}'>
                        Zapisz
                    </button>
                    <span class="loader"><p id="LoadingInfo{{ pageId }}"></p></span>
                </div>
            </div>
        </fieldset>
    </form>
</div>

{{ renderJsInline() }}